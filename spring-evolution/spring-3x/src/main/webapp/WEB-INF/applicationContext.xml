<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <!-- Загружаем Java-конфигурации в этот XML-контекст -->
    <context:annotation-config/> <!-- Включает @Autowired и другие аннотации -->
    <context:component-scan base-package="dev.madela"/>

    <!-- Импортируем XML-конфигурацию безопасности -->
    <import resource="security-context.xml"/>

    <!-- Но для чистоты эксперимента с Java Config, пусть будет так: -->
    <bean class="dev.madela.config.PersistenceConfig"/>

</beans>